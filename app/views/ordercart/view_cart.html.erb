<div class="row">
  <% if @cart_item.empty? %>
      <p>Cart is empty</p>
  <% else %>
      <ul>
        <h1>Your Cart Products</h1>
        <% @products_array.each do |product| %>
            <li>
              <div class="row">
                <h4><%= link_to product.name, product %></h4>
                <p><%= number_to_currency(product.price) %></p>
              </div>
              <div class="row">

                <div class="small-9 columns"><%= product.description %></div>
              </div>
            </li>
            <hr>
        <% end %>
      </ul>
  <% end %>

  <br>
</div>